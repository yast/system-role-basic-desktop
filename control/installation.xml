<?xml version="1.0"?>
<productDefines xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">

<!--
Work around for the text domain
textdomain="control"
-->

    <textdomain>control</textdomain>

    <texts>
      <basic_desktop_host_role>
        <!-- TRANSLATORS: a label for a system role -->
        <label>GNOME Desktop (Basic)</label>
      </basic_desktop_host_role>
      <basic_desktop_host_role_description>
        <label>GNOME Desktop environment with only essential graphical applications installed (File Manager, Web Browser) and using X11 technology</label>
      </basic_desktop_host_role_description>
    </texts>

    <update>
      <system_roles>
        <insert_system_roles config:type="list">
          <insert_system_role>
            <!-- FATE#324198 -->
            <system_roles config:type="list">
              <system_role>
                <id>basic_desktop_host_role</id>
                <order config:type="integer">3000</order>
                <software>
                  <default_patterns>base enhanced_base yast2_basis x11_yast x11 gnome_basic</default_patterns>
                  <optional_default_patterns><![CDATA[]]></optional_default_patterns>
                </software>
              </system_role>
            </system_roles>
          </insert_system_role>
        </insert_system_roles>
      </system_roles>
    </update>
</productDefines>
